<Window x:Class="QueryTune.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QueryTune.WPF.Views"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:vm="clr-namespace:QueryTune.WPF.ViewModels"
        xmlns:b="clr-namespace:QueryTune.WPF.Behaviors"
        mc:Ignorable="d"
        Title="SQL QueryTune" Height="800" Width="1200"
        Background="{StaticResource AppBackgroundBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="SQL QueryTune" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="16,12"/>
            
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="16,0">
                <Button Content="⚙" 
                        Style="{StaticResource PrimaryButton}"
                        Margin="8,0"/>
                <Button Content="?" 
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/> <!-- Fixed width for connection panel -->
            </Grid.ColumnDefinitions>

            <!-- Main Area - Left Column -->
            <Grid Grid.Column="0" Margin="16">                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="150"/>
                </Grid.RowDefinitions>

                <!-- Query Editor Card -->
                <Border Grid.Row="0" 
                        Style="{StaticResource CardBorderStyle}" 
                        Margin="0,0,0,4">
                    <DockPanel>
                        <TextBlock Text="Query Editor" 
                                 Style="{StaticResource HeaderTextStyle}"
                                 DockPanel.Dock="Top"/>
                        
                        <Button Content="Run Analysis" 
                                Command="{Binding RunAnalysisCommand}"
                                Style="{StaticResource PrimaryButton}"
                                DockPanel.Dock="Bottom"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0"/>                        <avalonedit:TextEditor
                            x:Name="QueryEditor"
                            x:FieldModifier="private"
                            ShowLineNumbers="True"
                            FontFamily="Consolas"
                            FontSize="12"
                            WordWrap="True"
                            b:AvalonEditBehavior.Text="{Binding SqlQuery, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                </Border>                <!-- Grid Splitter -->
                <GridSplitter Grid.Row="1"
                             Height="8"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             Background="Transparent"
                             ShowsPreview="True">
                    <GridSplitter.Template>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Border Background="Transparent" Padding="0,3">
                                <Rectangle Fill="{StaticResource PrimaryBrush}" 
                                         Height="2" 
                                         SnapsToDevicePixels="True"/>
                            </Border>
                        </ControlTemplate>
                    </GridSplitter.Template>
                </GridSplitter>

                <!-- Results Card -->
                <Border Grid.Row="2" 
                        Style="{StaticResource CardBorderStyle}"
                        Margin="0,4,0,0">
                    <DockPanel>
                        <TextBlock Text="Analysis Results" 
                                 Style="{StaticResource HeaderTextStyle}"
                                 DockPanel.Dock="Top"/>
                          <wv2:WebView2 Source="about:blank"
                                    x:Name="ResultsViewer"
                                    x:FieldModifier="private"/>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- Connection Panel - Right Column -->
            <Grid Grid.Column="1" Margin="0,16,16,16">
                <StackPanel>
                    <!-- Connection Card -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Connection" 
                                     Style="{StaticResource HeaderTextStyle}"/>

                            <TextBlock Text="Server Name" 
                                     Style="{StaticResource SubheaderTextStyle}"/>
                            <TextBox Text="{Binding ServerName}" 
                                   Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Text="Database" 
                                     Style="{StaticResource SubheaderTextStyle}"/>
                            <TextBox Text="{Binding DatabaseName}" 
                                   Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Text="Authentication" 
                                     Style="{StaticResource SubheaderTextStyle}"/>
                            <StackPanel Margin="0,4">
                                <RadioButton Content="Windows Authentication" 
                                           IsChecked="{Binding UseWindowsAuthentication}"
                                           Margin="0,0,0,4"/>
                                <RadioButton Content="SQL Server Authentication" 
                                           IsChecked="{Binding UseWindowsAuthentication, 
                                           Converter={StaticResource BoolToVisibilityConverter}, 
                                           ConverterParameter=inverse}"/>
                            </StackPanel>

                            <TextBlock Text="User ID" 
                                     Style="{StaticResource SubheaderTextStyle}"
                                     Visibility="{Binding UseWindowsAuthentication, 
                                     Converter={StaticResource BoolToVisibilityConverter}, 
                                     ConverterParameter=inverse}"/>
                            <TextBox Text="{Binding UserId}" 
                                   Style="{StaticResource ModernTextBox}"
                                   Visibility="{Binding UseWindowsAuthentication, 
                                   Converter={StaticResource BoolToVisibilityConverter}, 
                                   ConverterParameter=inverse}"/>

                            <Button Content="Test Connection" 
                                    Command="{Binding TestConnectionCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,16,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{StaticResource SurfaceBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="12" 
                           IsIndeterminate="True"
                           Visibility="{Binding IsAnalyzing, 
                           Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
