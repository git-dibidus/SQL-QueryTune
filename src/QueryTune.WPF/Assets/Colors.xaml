<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#1A237E</Color>
    <Color x:Key="SecondaryColor">#00796B</Color>
    <Color x:Key="BackgroundStartColor">#F5F7FA</Color>
    <Color x:Key="BackgroundEndColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FFA000</Color>
    <Color x:Key="ErrorColor">#D32F2F</Color>
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BackgroundStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundEndColor}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>
